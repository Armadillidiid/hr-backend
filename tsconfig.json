{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,

    "noUncheckedIndexedAccess": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,
    "baseUrl": ".",

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
